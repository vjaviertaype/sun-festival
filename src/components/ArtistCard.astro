---
const { name, url_image, members, summary, top_songs } = Astro.props;
---

<article class="artist-group">
  <header class="artist-group_header">
    <h2 class="artist-group_title">{name}</h2>
  </header>

  <figure class="artist-group_picture">
    {
      url_image && (
        <img
          class="artist-group_picture_img"
          src={url_image}
          alt={`Imagen de ${name}`}
        />
      )
    }
    <figcaption class="artist-group_picture_caption">
      Foto promocional de {name}
    </figcaption>
  </figure>

  <section class="artist-group_content">
    <h4 class="artist-group_section_title">Miembros</h4>
    {
      members && (
        <ul class="artist-group_list">
          {members.map((member) => (
            <li class="artist-group_list_item">
              <strong class="artist-group_member_name">{member.name}</strong> â€“{" "}
              <span class="artist-group_member_role">{member.role}</span>
            </li>
          ))}
        </ul>
      )
    }
  </section>
</article>

<style>
  .artist-group {
    margin: 1rem;

    display: grid;
    grid-template-areas:
      "header"
      "image"
      "content";

    gap: 1rem;
    width: fit-content;
    max-width: 60rem;
    padding: 1rem 1.5rem;
    border-top: 1px solid black;
    border-left: 1px solid black;
    border-top-left-radius: 10px;
    box-shadow: 5px 5px 4px black;
  }

  .artist-group_header {
    grid-area: header;
    text-align: center;
  }

  .artist-group_title {
    font-size: 1.75rem;
    margin: 0;
  }

  .artist-group_picture {
    grid-area: image;
    max-width: 100%;
    text-align: center;
  }

  .artist-group_picture_img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .artist-group_picture_caption {
    font-size: 0.875rem;
    color: #555;
    margin-top: 0.5rem;
  }

  .artist-group_content {
    grid-area: content;
  }

  .artist-group_section_title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .artist-group_list {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .artist-group_list_item {
    margin-bottom: 0.5rem;
  }

  .artist-group_member_name {
    font-weight: bold;
  }

  .artist-group_member_role {
    font-style: italic;
  }

  /* Responsive para pantallas grandes */
  @media (min-width: 768px) {
    .artist-group {
      grid-template-areas:
        "header header"
        "image content";
      grid-template-columns: 1fr 2fr;
      align-items: start;
    }

    .artist-group_picture {
      justify-self: center;
    }
  }
</style>
