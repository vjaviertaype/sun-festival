---
const { time = [], groups = [] } = Astro.props;
---

<table class="artist-table">
  <thead class="artist-table__head">
    <tr>
      <th class="artist-table__header">Horario</th>
      <th class="artist-table__header">Artista</th>
      <th class="artist-table__header">Foto</th>
      <th class="artist-table__header">Miembros</th>
    </tr>
  </thead>
  <tbody class="artist-table__body">
    {
      groups.map((group, index) => (
        <tr class="artist-table__row">
          <td class="artist-table__cell">{time[index]}</td>
          <td class="artist-table__cell">{group.name}</td>
          <td class="artist-table__cell">
            <img
              class="artist-table__image"
              src={group.url_image}
              alt={group.name}
            />
          </td>
          <td class="artist-table__cell">
            <ul class="artist-table__members-list">
              {group.members.map((member) => (
                <li class="artist-table__member-item">{`${member.name} (${member.role})`}</li>
              ))}
            </ul>
          </td>
        </tr>
      ))
    }
  </tbody>
</table>

<style>
  .artist-table {
    width: 100%;
    border-collapse: collapse;
  }

  .artist-table__header,
  .artist-table__cell {
    padding: 0.5rem;
    text-align: left;
    vertical-align: top;
  }

  .artist-table__image {
    width: 6rem;
  }

  .artist-table__members-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .artist-table__member-item {
    margin-bottom: 0.25rem;
  }

  /* Breakpoint: 1600px */
  @media screen and (max-width: 1600px) {
    .artist-table__image {
      width: 5rem;
    }
  }

  /* Breakpoint: 1100px */
  @media screen and (max-width: 1100px) {
    .artist-table__image {
      width: 4rem;
    }

    .artist-table__header,
    .artist-table__cell {
      font-size: 0.9rem;
    }
  }

  /* Breakpoint: 800px */
  @media screen and (max-width: 800px) {
    .artist-table {
      display: block;
    }

    .artist-table__head {
      display: none;
    }

    .artist-table__body {
      display: block;
    }

    .artist-table__row {
      display: block;
      margin-bottom: 2rem;
      border: 1px solid #ccc;
      border-radius: 0.5rem;
      padding: 1rem;
    }

    .artist-table__cell {
      display: flex;
      align-items: center;
      padding: 0.25rem 0;
    }

    .artist-table__cell::before {
      flex: 0 0 40%;
      font-weight: bold;
      color: #333;
    }

    .artist-table__cell:nth-child(1)::before {
      content: "Horario";
    }

    .artist-table__cell:nth-child(2)::before {
      content: "Artista";
    }

    .artist-table__cell:nth-child(3)::before {
      content: "Foto";
    }

    .artist-table__cell:nth-child(4)::before {
      content: "Miembros";
    }

    .artist-table__cell:nth-child(5)::before {
      content: "Top Canciones";
    }

    .artist-table__image {
      width: 5rem;
      border-radius: 10% 30%;
      margin-left: auto;
    }
  }
</style>
